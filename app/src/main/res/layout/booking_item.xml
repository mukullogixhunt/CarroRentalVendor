<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_field">


    <!-- Or any light grey background for the screen -->


    <androidx.cardview.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_minus12sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_status">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp">

        <!-- Row 1: Trip Type and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_trip_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ONE WAY TRIP"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <!-- Spacer to push the date to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pickup_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar 16, 2025 08:00 am"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/primary_field" />

        <!-- Row 2: Location Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal">


            <!-- Location Text column -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_6sdp">

                            <ImageView
                                android:id="@+id/iv_first_dn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icn_circle" />

                            <ImageView
                                android:id="@+id/ivView"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_view" />

                            <ImageView
                                android:id="@+id/iv_last_dn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icn_circle" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_start_icon"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:src="@drawable/ic_pickup_location" />


                            <TextView
                                android:id="@+id/tv_from_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12ssp"
                                tools:text="Jharsuguda, Odisha,\nIndia" />


                        </LinearLayout>


                        <View
                            android:id="@+id/view_dots"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:background="@drawable/dotted_line_vertical" />


                        <LinearLayout
                            android:id="@+id/llDrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_end_icon"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:src="@drawable/ic_img_drop" />


                            <TextView
                                android:id="@+id/tv_from_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="12 September, 2024, 14:30 PM"
                                android:textColor="@color/secondary_light3"
                                android:textSize="@dimen/_10ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_from_location" />


                            <TextView
                                android:id="@+id/tv_to_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12ssp"
                                tools:text="Bilaspur, Chhattisgarh, \nIndia" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <!-- Row 3: Divider -->
                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/primary_field" />

                <!-- Row 4: Info Grid -->
                <LinearLayout
                    android:id="@+id/info_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <!-- Column 1: Car Type -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/car_type_icon"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_img_car" />

                        <TextView
                            android:id="@+id/tv_car_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:layout_marginTop="@dimen/_4sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold"
                            tools:text="SEDAN (AC)" />

                        <!--                    <TextView
                                                android:id="@+id/tv_extra_km_charge"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="Rs 11.4/km\n(for extra km)"
                                                android:textColor="@color/gray_text"
                                                android:textSize="@dimen/_9ssp" />-->
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="@color/primary_field" />

                    <!-- Column 2: Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Raipur, Chattisgarh"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_from_date" />

                        <TextView
                            android:id="@+id/tv_to_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12 September, 2024, 16:30 PM"
                            android:textColor="@color/secondary_light3"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_to_location" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivCarImage"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/car" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pickup_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Pickup : Plot 9, near Dwarika restaurant, Bhilai"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:id="@+id/lv_one_way_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pickup_details">



                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"


                        android:src="@drawable/ic_img_rupee" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:gravity="center"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:text="Rs 2650.0" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@color/primary_field" />

                <!-- Column 3: Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_img_distance" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold"
                        tools:text="235.0 KM" />

                </LinearLayout>
            </LinearLayout>

            <!-- Row 5: Divider -->
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/primary_field" />

            <!-- Row 4: Info Grid -->
            <LinearLayout
                android:id="@+id/info_grid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- Column 1: Car Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_extra_km_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Rs 10/km\n(for extra km)"
                        android:textStyle="bold"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@color/primary_field" />


                <!-- Column 3: Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvDriverCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Included\n(driver charge)"
                        android:textStyle="bold"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Row 5: Divider -->
            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/primary_field" />

            <!-- Row 6: Toll & Parking Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_toll_parking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toll &amp; State Tax Extra"
                    android:textStyle="bold"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_parking_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking Extra, if applicable"
                    android:textStyle="bold"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>


            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/primary_field" />

            <!-- Row 7: Departure -->
            <LinearLayout
                android:id="@+id/llDropDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_calender"
                    app:tint="@color/gray_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="Drop date:"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_11ssp" />


                <!-- Spacer to push the date to the right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_drop_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar 16, 2025 08:00 am"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:backgroundTint="@color/secondary_dark"
        android:text="In Progress"
        android:gravity="center"
        android:elevation="@dimen/_10sdp"

        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:backgroundTint="@color/green"
        android:paddingVertical="@dimen/_10sdp"
        android:text="ACCEPT"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_details" />

</androidx.constraintlayout.widget.ConstraintLayout>


