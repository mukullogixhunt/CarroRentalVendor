<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_minus18sdp"
        app:layout_constraintTop_toBottomOf="@+id/btn_status"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:backgroundTint="@color/primary_light8"
            app:cardCornerRadius="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/iv_driver"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_no_profile" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_profile"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="@string/name"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="@string/phone_number"
                            android:textColor="@color/gray_light"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/icn_edit"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_licence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_d_licence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/driving_licence"
                        android:layout_weight="1"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tv_not_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_submitted"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/_11ssp" />


                    <ImageView
                        android:id="@+id/iv_upload_licence"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_insert"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/expiration_date"
                        android:layout_weight="1"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:id="@+id/tv_expirey_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00/00/0000"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_7sdp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_police_verification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/police_verification"
                        android:layout_weight="1"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:id="@+id/tvPVNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_submitted"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/_11ssp" />
                    <ImageView
                        android:id="@+id/iv_upload_doc"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_insert"/>
                    <ImageView
                        android:id="@+id/iv_p_v"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_15sdp"
                        app:tint="@color/green"
                        android:visibility="gone"
                        android:src="@drawable/icn_privacy"/>
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:backgroundTint="@color/secondary_dark"
        android:text="@string/pending"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_7sdp"
        app:icon="@drawable/icn_pending"
        app:iconSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>